@model CarrosMotosBob.Models.ViewModels.Anuncio.CadastroVm
@{
    ViewData["Title"] = "Cadastro de anúncio";
}

<h4>Cadastro de anúncio</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Cadastrar" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-md-4">
                <label asp-for="Ano"></label>
                <input asp-for="Ano" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Descricao"></label>
                <input asp-for="Descricao" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Preco"></label>
                <input asp-for="Preco" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Imagem"></label>
                <input asp-for="Imagem" type="file" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>